<% include _header %>

<div class="row containter">
    <div class="col-md-12">
        <form action="/cerebros/edit/<%= cerebros.id  %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="">IQ</label>
                <input type="text" class="form-control" name="iq" value="<%= cerebros.iq %>">
            </div>
            <div class="form-group">
                <label for="">Sabor</label>
                <input type="text" class="form-control" name="flavor" value="<%= cerebros.flavor %>">
            </div>
            <div class="form-group">
                <label for="">Descripcion</label>
                <input type="text" class="form-control" name="description" value="<%= cerebros.description %>">
            </div>
            
            <button class="btn btn-primary"> <i class="fas fa-skull"></i> Editar cerebro
            </button>
        </form>

    </div>
</div>

<% include _footer %>