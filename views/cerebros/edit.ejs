<% include _header %>

<div class="row containter">
    <div class="col-md-12">
        <form action="/cerebros/edit/<%= cerebro.id  %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="">IQ</label>
                <input type="text" class="form-control" name="iq" value="<%= cerebro.iq %>">
            </div>
            <div class="form-group">
                <label for="">Sabor</label>
                <input type="text" class="form-control" name="flavor" value="<%= cerebro.flavor %>">
            </div>
            <div class="form-group">
                <label for="">Descripcion</label>
                <input type="text" class="form-control" name="description" value="<%= cerebro.description %>">
            </div>

            <% if(mensajeError.length > 0){ %>
                <div class="alert alert-danger">
                    <%= mensajeError %>
                </div>
                <% } %>
                <% if(mensajeExito.length > 0) {%>
                    <div class="alert alert-danger">
                        <%= mensajeExito %>
                    </div>
            <% } %>
            
            <button class="btn btn-primary"> <i class="fas fa-skull"></i> Editar cerebro
            </button>
        </form>

    </div>
</div>

<% include _footer %>