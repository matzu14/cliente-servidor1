<% include _header %>

<div class="row containter">
    <div class="col-md-12">
        <form action="/cerebros/delete/<%= cerebro.id  %>?_method=DELETE" method="POST">
            <div class="form-group">
                <label for="">Iq</label>
                <input type="text" class="form-control" name="iq" value="<%= cerebro.iq %>" disabled>
            </div>
            <div class="form-group">
                <label for="">Sabor</label>
                <input type="text" class="form-control" name="flavor" value="<%= cerebro.flavor %>" disabled>
            </div>
            <div class="form-group">
                <label for="">Descripcion</label>
                <input type="text" class="form-control" name="description" value="<%= cerebro.description %>" disabled>
            </div>
            
            <button class="btn btn-danger"> <i class="fas fa-skull"></i> Eliminar cerebro
            </button>
        </form>

    </div>
</div>

<% include _footer %>